{
  "compilerOptions": {
    "target": "ES2020", // Or newer like ES2022
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true, // Allows importing JSON files
    "experimentalDecorators": true, // If you plan to use decorators (e.g., with routing libraries or NestJS)
    "emitDecoratorMetadata": true // Same as above
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
